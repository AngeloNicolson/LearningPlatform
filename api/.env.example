# Server Configuration
PORT=3777
NODE_ENV=development

# Client URL
CLIENT_URL=http://localhost:5777

# HTTPS Configuration (optional, auto-generated if not present)
USE_HTTPS=true
CERT_KEY_PATH=../certs/localhost-key.pem
CERT_PATH=../certs/localhost.pem

# JWT Secrets (Generate secure random strings)
JWT_ACCESS_SECRET=your-access-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here

# Database
DATABASE_URL=sqlite://./database.db

# Encryption & Security (REQUIRED - Generate using encryption.ts utilities)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=<64-character-hex-string>
ENCRYPTION_SALT=<64-character-hex-string>

# Data Retention & Compliance
DATA_RETENTION_YEARS=7
ENABLE_AUDIT_LOGGING=true

# Payments
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
PAYMENT_PROVIDER=stripe
PLATFORM_FEE_PERCENT=20

# Storage
STORAGE_PROVIDER=filesystem

# File Security
MALWARE_SCAN_ENABLED=true

# Redis (optional, for session management and rate limiting)
REDIS_URL=redis://localhost:6379