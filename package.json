{
  "name": "debating-platform",
  "version": "1.0.0",
  "description": "Mathematical tutoring and debating platform",
  "private": true,
  "workspaces": [
    "client",
    "api",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:full": "bash scripts/dev.sh",
    "dev:client": "npm run dev --workspace=client",
    "dev:api": "npm run dev --workspace=api",
    "build": "npm run build:shared && npm run build:api && npm run build:client",
    "build:client": "npm run build --workspace=client",
    "build:api": "npm run build --workspace=api",
    "build:shared": "npm run build --workspace=shared",
    "start": "npm run start:api",
    "start:api": "npm run start --workspace=api",
    "setup:https": "bash scripts/setup-https.sh",
    "run": "bash scripts/run.sh",
    "docker:up": "bash -c '[ ! -f certs/localhost.pem ] && command -v mkcert &> /dev/null && bash scripts/setup-https.sh || mkdir -p certs; docker-compose up -d'",
    "docker:down": "docker-compose down",
    "docker:rebuild": "bash -c '[ ! -f certs/localhost.pem ] && command -v mkcert &> /dev/null && bash scripts/setup-https.sh || mkdir -p certs; docker compose down -v && docker compose build --no-cache && docker compose up'",
    "docker:reset": "docker-compose down -v && bash scripts/run.sh",
    "docker:status": "bash scripts/status.sh",
    "install:all": "npm install",
    "clean": "rm -rf node_modules client/node_modules api/node_modules shared/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}